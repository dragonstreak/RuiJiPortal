        </div> 
        <ul class="nav"> 
        	<li><a href="@Url.Action("ItemList", new { categoryId = (int)ArticleCategoryEnum.CompanyInfo })" style=" background-image:none;">@Resource.Menu_StepIntoRuiji</a></li><li>|</li>
            <li><a href="@Url.Action("ItemList", new { categoryId = (int)ArticleCategoryEnum.News })" style=" background-image:none;">@Resource.Menu_NewsCenter</a></li><li>|</li>
            <li><a href="@Url.Action("ItemList", new { categoryId = (int)ArticleCategoryEnum.Solution })" style=" background-image:none;">@Resource.Menu_SolutionCenter</a></li><li>|</li>
            <li><a href="@Url.Action("ItemList", new { categoryId = (int)ArticleCategoryEnum.Service })" style=" background-image:none;">@Resource.Menu_ServiceCenter</a></li><li>|</li>
            <li><a href="@Url.Action("ItemList", new { categoryId = (int)ArticleCategoryEnum.Achievement })" style=" background-image:none;">@Resource.Menu_SuccessCases</a></li><li>|</li>
            <li><a href="@Url.Action("ItemList", new { categoryId = (int)ArticleCategoryEnum.TechResource })" style=" background-image:none;">@Resource.Menu_Information</a></li><li>|</li>
            <li><a href="@Url.Action("ItemList", new { categoryId = (int)ArticleCategoryEnum.HumanResource })" style=" background-image:none;">@Resource.Menu_HumanResources</a></li><li>|</li>
            <li><a href="@Url.Action("ItemList", new { categoryId = (int)ArticleCategoryEnum.ContactUs })" style=" background-image:none;">@Resource.Menu_ContactUs</a></li><li>|</li>
            <li><a href="@(RuiJi.UI.Common.ConfigManager.Instance.ForumUrl)" style=" background-image:none;" target="_blank">@Resource.Menu_Forum</a></li>
        </ul> 
        <div class="banner white">
            <img src="/Contents/UI/Images/ruiji/378.jpg" alt="RuiJi" />
        </div> 
        <div class="tabde"> 
            <div class="table_title table-title-wrapper"> 
                <ul> 
                    @foreach (var node in RuiJi.UI.Common.NavTreeContext.HomePageShown) {
                        <li key="@("tag-" + node.Name)" class="other">@RuiJi.UI.Common.ResourceManager.GetLocalizedString(node.ResourceKey)</li>
                    }
                    
                </ul> 
                <div class="clear"></div> 
            </div> 

            <div class="table-content-wrapper">
                @foreach (var node in RuiJi.UI.Common.NavTreeContext.HomePageShown) {
                    <div class="table_content" key="@("tag-" + node.Name)" style="display: none;">
                        <table border="0" cellpadding="15" cellspacing="15" width="100%"> 
                            <tbody>
                                <tr>
                                    @foreach (var subnode in node.Children) {
                                        string linkText = RuiJi.UI.Common.ResourceManager.GetLocalizedString(subnode.ResourceKey);
                                        <td width="150"><strong><a href="@Url.Action("ItemList", new { categoryId = subnode.CategoryId })" title="@linkText">@linkText</a></strong></td>
                                    }
                                </tr>
                                <tr>
                                    @foreach (var subnode in node.Children) {
                                        <td style="vertical-align:top;">
                                            @foreach (var subsubnode in subnode.Children) {
                                                string linkText = RuiJi.UI.Common.ResourceManager.GetLocalizedString(subsubnode.ResourceKey);
                                                <a href="@Url.Action("ItemList", new { categoryId = subsubnode.CategoryId })" title="@linkText">@linkText</a><br>
                                            }
                                        </td>
                                    }
                                </tr>
                            </tbody>
                        </table>
                    </div>
                }

            </div>
        
        
        </div> 
    <section class="activities-section-wrapper">
        <h2 class="white">
            <strong>@Resource.Activities_Title</strong>
            @Html.Partial("_Activities")
    	</h2> 
    </section>
    	

    <section class="news-section-wrapper">
        <div class="news"> 
            @Html.Partial("_NewsSection")

        </div> 
        </section>
        <div class="footer"> 


