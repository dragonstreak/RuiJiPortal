                <li><a href="@Url.Action("SiteMap")">@Resource.Nav_Navigation</a></li><li>|</li>
                <li><a href="@Url.Action("LegalInformation")">@Resource.Nav_LegalInformation</a></li><li>|</li>
                <li><a href="@Url.Action("Links")">@Resource.Nav_Links</a></li><li>|</li>
