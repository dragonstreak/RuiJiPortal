            	<li><a class="secnavhr" href="@Url.Action("ItemList", new { categoryId = (int)ArticleCategoryEnum.ContactUs })">@LanguageHelper.GetArticleCategoryUIName((int)ArticleCategoryEnum.ContactUs)</a></li>
